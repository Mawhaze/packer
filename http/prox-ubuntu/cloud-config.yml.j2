#cloud-config
autoinstall:
  version: 1
  keyboard:
    layout: us
  locale: en_US
  network:
    version: 2
    ethernets:
      nics:
        match:
          name: en*
        dhcp4: true
  packages:
    - cloud-init
    - openssh-server
  ssh:
    install-server: yes
    allow-pw: true
  updates: all
  user-data:
    users:
      {% for user in users %}
      - name: {{ user.name }}
        ssh_authorized_keys:
          - {{ user.ssh_public_key }}
        sudo: ALL=(ALL) NOPASSWD:ALL
        groups: [sudo]
        lock_passwd: true
        shell: /bin/bash
      {% endfor %}
