#cloud-config
autoinstall:
  version: 1
  early-commandsVj
    - systemctl stop sshd
  locale: en_US
  keyboard:
    layout: en
    variant: us
  network:
    network:
      version: 2
      ethernets:
        nics:
          match:
            name: en*
          dhcp4: true
  ssh:
    install-server: yes
  user-data:
    users:
      {% for user in users %}
      - name: {{ user.name }}
        ssh-authorized-keys:
          - {{ user.ssh_public_key }}
        sudo: ALL=(ALL) NOPASSWD:ALL
        groups: [sudo]
        lock_passwd: true
        shell: /bin/bash
      {% endfor %}
  packages:
    - qemu-guest-agent
    - cloud-init
    - openssh-server